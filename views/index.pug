extends layout
block content
  .w3-container
    head 
      link(rel="stylesheet", href="../styles/search.css")
    body  
    if locals.user
      h4 Bienvenido #{allUserInfo.nickname}
    else
      p Para poder guardar ofertas como favoritas, por favor #[a(href="/login") inicia sesión].
    div#container  
      section.logo 
        img(src="../assets/Screenshot 2021-12-08 at 18.32.48.png", alt="Loading results" id="logo")
      section.search    
        h1.titleSearch Buscar ofertas:
        form.formSearch(action='/', method='POST')
          input.titleSearched(type='text', name='titleSearched', placeholder='Ej: JavaScript') 
          //- input.btnSearch(type='submit', value='Buscar')
          input(type='image', src='../assets/search.png', id='imgSearch') 
      section.results
        div#loading
          img(src="../assets/clipart2006315.png", alt="Loading results" id="loader")
        div.adContainer
      if data
        p #{tag}
        each ad in data
          ul.ad
            li
              img.imagen(src=ad.image)
            li.title #{ad.title}
            li.company #{ad.company}
            li.location #{ad.location}
            li.description #{ad.description}
            li.date Fecha anuncio: #{ad.date}
            li
              a.link(href=ad.link, target='_blank') Más información
            if locals.user
              input(type='image', src='../assets/352344_favorite_icon.png', id='imgSearch') 
              //- input.btnFavorite(type='button', value='GuardarFav')
      else 
        p.label ¿Preparado para encontrar tu primer empleo como desarrolador?
        p.label En TSR seleccionaremos ofertas sin experiencia dentro de España. Tu sólo indica el lenguaje buscas
    include ./footer.pug
